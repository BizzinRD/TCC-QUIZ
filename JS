      image: "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcROSU1N9fdGkLqS2gQ7t1S9wb0-Rqj22UCtVQ&s"
    },
    {
      question: "Um bug em computadores recebeu esse nome por causa de um inseto.",
      answer: true,
      image: "https://i7host.com.br/blog/wp-content/uploads/2024/01/bug.jpg"
    },
    {
      question: "O spam é um tipo de e-mail indesejado e enviado em massa.",
      answer: true,
      image: "https://s2-techtudo.glbimg.com/thTNXmAFETofly-uFSQE1rZb0MQ=/0x0:695x400/984x0/smart/filters:strip_icc()/i.s3.glbimg.com/v1/AUTH_08fbf48bc0524877943fe86e43087e7a/internal_photos/bs/2021/V/2/dr4qQORlymaWT4sgWeTQ/2016-05-31-gmail-0.jpg"
    },
  ];
  
  let currentQuestion = 0;
  let score = 0;
  
  const questionEl = document.getElementById('question');
  const questionImageEl = document.getElementById('question-image');
  const trueBtn = document.getElementById('true-btn');
  const falseBtn = document.getElementById('false-btn');
  const feedbackEl = document.getElementById('feedback');
  const scoreEl = document.getElementById('score');
  const highScoresEl = document.getElementById('high-scores');
  // Referência ao botão de reiniciar
  const resetButton = document.getElementById('reset-btn');
  // NOVO: Referência ao botão de limpar recordes
  const clearRecordsButton = document.getElementById('clear-records-btn');
  
  // ===================== SISTEMA DE RECORDES =====================
  
  const HIGH_SCORES_KEY = 'highScores';
  
  function getHighScores() {
    const highScoresString = localStorage.getItem(HIGH_SCORES_KEY);
    return highScoresString ? JSON.parse(highScoresString) : [];
  }
  
  function saveHighScores(highScores) {
    localStorage.setItem(HIGH_SCORES_KEY, JSON.stringify(highScores));
  }
  
  function renderHighScores() {
    const highScores = getHighScores();
    highScoresEl.innerHTML = '';
    highScores.forEach(scoreItem => {
      const li = document.createElement('li');
      li.textContent = `${scoreItem.name}: ${scoreItem.score}`;
      highScoresEl.appendChild(li);
    });
  }
  
  function checkAndSaveHighScore() {
    const highScores = getHighScores();
    const isNewHighScore = highScores.length < 5 || score > highScores[highScores.length - 1].score;
  
    if (isNewHighScore) {
      const playerName = prompt("Parabéns! Você fez um novo recorde! Digite seu nome:");
      if (playerName) {
        highScores.push({ name: playerName, score: score });
        highScores.sort((a, b) => b.score - a.score);
        if (highScores.length > 5) {
          highScores.pop();
        }
        saveHighScores(highScores);
        renderHighScores();
      }
    }
  }
  
  // NOVO: Função para limpar os recordes
  function clearHighScores() {
    const confirmation = confirm("Tem certeza que deseja limpar todos os recordes?");
    if (confirmation) {
      localStorage.removeItem(HIGH_SCORES_KEY);
      renderHighScores();
    }
  }
  
  // ===================== LÓGICA DO QUIZ =====================
  
  function loadQuestion() {
    feedbackEl.className = 'feedback';
  
    if (currentQuestion < questions.length) {
      const current = questions[currentQuestion];
      questionEl.textContent = current.question;
  
      if (current.image) {
        questionImageEl.src = current.image;
        questionImageEl.alt = "Imagem relacionada à pergunta";
        questionImageEl.style.display = "block";
      } else {
        questionImageEl.style.display = "none";
      }
  
      trueBtn.disabled = false;
      falseBtn.disabled = false;
      trueBtn.style.display = "inline-block";
      falseBtn.style.display = "inline-block";
  
    } else {
      // Quiz finalizado
      questionEl.textContent = "Quiz finalizado!";
      questionImageEl.style.display = "none";
      trueBtn.style.display = "none";
      falseBtn.style.display = "none";
      feedbackEl.textContent = `Sua pontuação final: ${score} / ${questions.length}`;
      feedbackEl.className = 'feedback show correct';
  
      checkAndSaveHighScore();
    }
    updateScore();
  }
  
  function updateScore() {
    scoreEl.textContent = `Pontuação: ${score} / ${questions.length}`;
  }
  
  function giveFeedback(isCorrect) {
    if (isCorrect) {
      feedbackEl.textContent = "✔ Correto!";
      feedbackEl.className = 'feedback show correct';
    } else {
      feedbackEl.textContent = "✘ Errado!";
      feedbackEl.className = 'feedback show incorrect';
    }
  }
  
  function answerQuestion(userAnswer) {
    trueBtn.disabled = true;
    falseBtn.disabled = true;
  
    const correctAnswer = questions[currentQuestion].answer;
    const isCorrect = userAnswer === correctAnswer;
  
    if (isCorrect) score++;
  
    giveFeedback(isCorrect);
  
    setTimeout(() => {
      currentQuestion++;
      loadQuestion();
    }, 1500);
  }
  
  // Função para reiniciar o quiz
  function resetQuiz() {
    currentQuestion = 0;
    score = 0;
    feedbackEl.textContent = '';
    loadQuestion();
  }
  
  trueBtn.addEventListener('click', () => answerQuestion(true));
  falseBtn.addEventListener('click', () => answerQuestion(false));
  
  if (resetButton) {
    resetButton.addEventListener('click', resetQuiz);
  }
  
  // NOVO: Adiciona o event listener para o botão de limpar recordes
  if (clearRecordsButton) {
    clearRecordsButton.addEventListener('click', clearHighScores);
  }
  
  loadQuestion();
  renderHighScores();
  
