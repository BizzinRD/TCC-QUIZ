let currentRound = 0;
let score = 0;

function updateScoreboard() {
  document.getElementById("scoreboard").textContent = `Pontos: ${score} | Rodada: ${currentRound + 1}/${rounds.length}`;
}

function showRound() {
  const gameArea = document.getElementById("game-area");
  const result = document.getElementById("result");
  result.textContent = "";
  gameArea.innerHTML = "";

  rounds[currentRound].forEach((headline, index) => {
    const div = document.createElement("div");
    div.className = "headline";
    div.textContent = headline.text;
    div.onclick = () => chooseHeadline(index);
    gameArea.appendChild(div);
  });

  updateScoreboard();
}

function chooseHeadline(index) {
  const chosen = rounds[currentRound][index];
  score += chosen.points;

  const result = document.getElementById("result");
  const veracidade = chosen.isFake ? "‚ùå Fake News" : "‚úÖ Verdadeira";
  result.innerHTML = `Voc√™ ganhou ${chosen.points} pontos!<br>${veracidade}`;

  currentRound++;
  if (currentRound < rounds.length) {
    setTimeout(showRound, 3000);
  } else {
    setTimeout(() => {
      document.getElementById("game-area").innerHTML = "";
      result.innerHTML = `
        üèÅ Fim do jogo! Sua pontua√ß√£o final foi ${score} pontos.<br><br>
        <button id="restart-button">üîÅ Jogar novamente</button>
      `;
      document.getElementById("scoreboard").textContent = `Pontos: ${score} | Rodada: ${rounds.length}/${rounds.length}`;
      document.getElementById("restart-button").onclick = restartGame;
    }, 3000);
  }
}

function restartGame() {
  currentRound = 0;
  score = 0;
  document.getElementById("result").textContent = "";
  document.getElementById("game-area").innerHTML = "";
  showRound();
}

showRound();
